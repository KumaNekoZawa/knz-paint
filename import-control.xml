<!DOCTYPE import-control PUBLIC
    "-//Checkstyle//DTD ImportControl Configuration 1.4//EN"
    "https://checkstyle.org/dtds/import_control_1_4.dtd">

<import-control pkg="knz.paint" strategyOnMismatch="disallowed">
    <allow class="java.awt.BasicStroke" />
    <allow class="java.awt.Color" />
    <allow class="java.awt.Cursor" />
    <allow class="java.awt.Graphics2D" />
    <allow class="java.awt.Stroke" />
    <allow class="java.awt.Polygon" />
    <allow class="java.awt.image.BufferedImage" />
    <allow class="javax.imageio.ImageIO" />
    <allow pkg="java.io" />
    <allow pkg="java.util" />
    <allow pkg="knz.paint.model" />
    <subpackage name="view">
        <allow pkg="java.awt" />
        <allow pkg="javax.swing" />
        <allow pkg="knz.paint.view" />
    </subpackage>
</import-control>
